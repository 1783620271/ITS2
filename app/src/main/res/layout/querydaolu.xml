<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/busheard"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="一号公交"/>
    <LinearLayout
        android:layout_marginLeft="100dp"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距一号站台距离："
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/busMiOne"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一号公交：22222米"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/busMiTwo"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="二号公交：4000米"/>
        <TextView
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:text="侯车环境："/>
        <TextView
            android:id="@+id/carHuanJing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="啊的开发计划那啊圣诞快乐发生的"
            android:padding="20dp"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/busAction1"
            android:textSize="30sp"
            android:text="一号站台"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/busAction2"
            android:textSize="30sp"
            android:text="二号站台"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>